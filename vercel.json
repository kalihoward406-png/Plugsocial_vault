{
  "functions": {
    "api/*.php": { "runtime": "vercel-php@0.7.4" }
  },
  "routes": [
    { "src": "/login", "dest": "/api/login.php" },
    { "src": "/signup", "dest": "/api/signup.php" },
    { "src": "/dashboard", "dest": "/api/dashboard.php" },
    { "src": "/logout", "dest": "/api/logout.php" },
    { "src": "/(.*)", "dest": "/api/login.php" }
  ]
}
