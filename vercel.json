{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    { "src": "/(css|js|images)/(.*)", "dest": "/api/$1/$2" },
    { "src": "/", "dest": "/api/login.php" },
    { "src": "/login", "dest": "/api/login.php" },
    { "src": "/dashboard", "dest": "/api/dashboard.php" },
    { "src": "/receive_sms", "dest": "/api/receive_sms.php" },
    { "src": "/(.*)", "dest": "/api/$1.php" }
  ]
}
